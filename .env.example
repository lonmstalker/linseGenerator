# Logging Configuration
# Available levels: debug, info, warn, error
LOG_LEVEL=info

# Session Management
# Maximum number of concurrent sessions
MAX_SESSIONS=100

# Session timeout in milliseconds (default: 1 hour)
SESSION_TIMEOUT=3600000

# State Persistence
# Available types: memory, file, redis
PERSISTENCE_TYPE=file

# Location for file-based persistence
STATE_LOCATION=./data/state

# Enable data compression for persistence
ENABLE_COMPRESSION=false

# Redis Configuration (if PERSISTENCE_TYPE=redis)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=
# REDIS_DB=0

# Performance Tuning
# Auto-save interval in milliseconds (default: 30 seconds)
AUTO_SAVE_INTERVAL=30000

# Maximum context size per session in bytes (default: 100KB)
MAX_CONTEXT_SIZE=102400

# Cleanup Configuration
# Inactive session threshold in milliseconds (default: 1 hour)
INACTIVE_THRESHOLD=3600000

# Cleanup run interval in milliseconds (default: 15 minutes)
CLEANUP_INTERVAL=900000

# Advanced Options
# Enable debug mode for development
DEBUG_MODE=false

# Maximum number of snapshots per session
MAX_SNAPSHOTS=50

# Maximum session age in milliseconds (default: 7 days)
MAX_SESSION_AGE=604800000